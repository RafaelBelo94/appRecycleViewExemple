<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeClaro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tituloAposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dourado"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Aposta 01"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descricaoAposta"
            android:text="Descriacao da aposta 01 para exemplo de texto. descrição da aposta 01 para exemplo de texto"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/white">
        </TextView>

        <TextView
            android:id="@+id/valorAposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dourado"
            android:gravity="center"
            android:text="R$100"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>